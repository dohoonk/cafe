<div class="wrapper">
<!-- Header -->
<div class="container" id="bean-index"></div>
<!-- Header end -->

<!-- search -->
<div class="search">
  <%= form_tag(beans_path, :method => "get", id: "search", remote: true) do %>
  <div class="search-text">
    <%= text_field_tag :search, params[:search], placeholder: "Search Beans(Type and press Enter)" %>
  </div>
  <% end %>
</div>
<!-- end of search -->

<div class="cotainer" id="bean-index-outer">
  <div class="row">
    <div id="answers">
      <% @beans.each do |f| %>
        <%= render "bean_search", f: f  %>
      <% end %>
    </div>
  </div>
</div>

<div class='text-center'>
  <%= paginate @beans, :theme => 'twitter-bootstrap-3' %>
</div>
</div>
