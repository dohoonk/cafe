<header class="main_h">
  <div class="row">
    <a class="logo">JavaHub</a>
    <div class="mobile-toggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <nav>
      <ul>
        <li class="hvr-overline-from-right"><%= link_to "Home", root_path%></li>
        <li class="hvr-overline-from-right"><%= link_to "Bean", beans_path %></li>
        <li class="hvr-overline-from-right"><%= link_to "Shop", shops_path %></li>
        <li class="hvr-overline-from-right"><%= link_to "Recipe", recipes_path %></li>
        <% if user_signed_in? %>
          <li class="hvr-overline-from-right"><%= link_to "Profile", user_path(current_user) %></li>
          <li class="hvr-overline-from-right"><%= link_to "Logout", sessions_path, method: :delete,
                 data: {confirm: "are you sure you want to log out?"}%></li>

          <li class="avatar hvr-overline-from-right"><%= link_to image_tag(current_user.avatar_url(:xxsmall).to_s), user_path(current_user) %><li>
        <% else %>
          <li class="navbar-right hvr-overline-from-right"><%= link_to "Login", new_session_path %></li>
          <li class="navbar-right hvr-overline-from-right"><%= link_to fa_icon("twitter", base: "square-o", class: "fa-2x"), sign_in_with_twitter_path%></li>
          <li class="navbar-right hvr-overline-from-right"><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div> <!-- / row -->
</header>

<!-- header-container -->
  <div class="header-container">
    <div class="video-container">
      <video class="video" autoplay loop muted>
        <source src="coffee.mp4" type="video/mp4"/>
        <source src="coffee.ogg" type="video/ogg"/>
        Your browser does not support the video tag.
      </video>
    </div> <!-- end of video-container -->
  </div>
  <!-- end of header-container -->

