      </div>
      <% end %>
    </div>
  </div>

  <div class="container cirlce">
    <div class="row">
      <% @recipes.each do |f| %>
      <div class="col-lg-4">
        <div class="circle"><%= image_tag f.recipeimg_url(:thumb) %></div>
      </div>
      <% end %>
