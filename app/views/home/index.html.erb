  <!-- popular shops/recipes -->
<div class="container" id="bean-home">
  <div class="container cirlce">
    <h2 class="no-span">These are the beans you are looking for</h2>
    <div class="row">
      <% @beans.each do |f| %>
      <div class="col-lg-4">
        <div class="circle hvr-grow"><%= link_to image_tag(f.beanimg_url(:thumb)), bean_path(f) %><%= f.name %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container" id="cafe-home">
  <div class="container circle">
    <div class="row">
      <h2 class="no-span">Places to bean</h2>
      <% @shops.each do |f| %>
      <div class="col-lg-4">
        <div class="circle hvr-grow"><%= link_to image_tag(f.cafeimg_url(:thumb)), shop_path(f) %><%= f.name %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container" id="recipe-home">
  <div class="container cirlce">
    <div class="row">
      <h2 class="no-span">Trending drinks</h2>
      <% @recipes.each do |f| %>
      <div class="col-lg-4">
        <div class="circle hvr-grow"><%= link_to image_tag(f.recipeimg_url(:thumb)), recipe_path(f) %><%= f.name %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<!-- end of popular shops/recipes -->

