<header class="main_h">

    <div class="row">
        <a class="logo" href="#">JavaHub</a>

        <div class="mobile-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <nav>
            <ul>
                <li><%= link_to "Home", root_path%></li>
                <li><%= link_to "Bean", beans_path %></li>
                <li><%= link_to "Shop", shops_path %></li>
                <li><%= link_to "Recipe", recipes_path %></li>
                <% if user_signed_in? %>
                  <li><%= link_to "Profile", user_path(current_user) %></li>
                  <li><%= link_to "Logout", sessions_path, method: :delete,
                           data: {confirm: "are you sure you want to log out?"}%></li>
                <% else %>
                  <li class="navbar-right"><%= link_to "Login", new_session_path %></li>
                  <li class="navbar-right"><%= link_to "Sign in with Twitter", sign_in_with_twitter_path %></li>
                  <li class="navbar-right"><%= link_to "Sign Up", new_user_path %></li>
                <% end %>
            </ul>
        </nav>

    </div> <!-- / row -->

</header>

<!-- header-container -->
  <div class="header-container">
    <div class="video-container">
      <video class="video" autoplay loop muted>
