        <source src="coffee2.mp4" type="video/mp4" />
        <source src="coffee2.ogg" type="video/ogg" />
        Your browser does not support the video tag.
      </video>
    </div> <!-- end of video-container -->
  </div>
  <!-- end of header-container -->

