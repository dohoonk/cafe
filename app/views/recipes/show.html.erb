<h1>These are the recipes that you are looking for</h1>
<%= @recipe.name %>
<%= @recipe.bean_name %>
<%= @recipe.region %>
<%= @recipe.roaster %>
<%= @recipe.producer %>
<%= @recipe.method %>
<%= @recipe.rating %>
<%= @recipe.notes %>
<%= @recipe.grind %>
<hr>
<% if can? :edit, @recipe %>
  <%= link_to "Edit", edit_recipe_path(@recipe) %>
<% end %>
<% if can? :delete, @recipe %>
  <%= link_to "Delete", recipe_path(@recipe), method: :delete %>
<% end %>
